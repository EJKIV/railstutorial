<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
		<h1>
			<%= gravatar_for @user %>
			<%= @user.name %>
		</h1>
	</section>
	<% if logged_in? %>
	<%= link_to "Say Something!", root_path, class: "btn btn-lg btn-primary" %>
	<% end %>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
      <% else %>
      	<h3>Nothing to Say?</h3>
      	<p>You have no posts, say hello to the world!</p>
    <% end %>
  </div>
</div>