<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
		<h1>
			<%= gravatar_for @user %>
			<%= @user.name %>
		</h1>
	</section>
  <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
  	<%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
      <% elsif current_user?(@user) %>
      	<%= render 'first_post' %>
	  <% else %>
	  <h3>Silent User</h3>
	  <p>This user is a bit shy right now</p>
    <% end %>
  </div>
</div>